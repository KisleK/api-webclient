<h1>New Character</h1>


<%= form_tag "/friends", method: :post do %>
  <div>
    <%= label_tag :character %>
    <%= text_field :character, @friend.character %>
  </div>
  <div>
    <%= label_tag :quote %>
    <%= text_field :quote, @friend.quote %>
  </div>
  <div>
    <%= label_tag :location %>
    <%= text_field :location, @friend.location %>
  </div>

  <div>
    <%= submit_tag "Create Character" %>
  </div>

<% end %>